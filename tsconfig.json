{
	"compilerOptions": {
		"target": "ES2018",
		"module": "commonjs",
		"noEmit": true,
		"jsx": "react",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"removeComments": true,
		"sourceMap": true,
		"allowJs": true,
		"skipLibCheck": true,
		"lib": ["DOM", "ES2018"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
