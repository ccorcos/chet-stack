{
	"name": "typescript-boilerplate",
	"version": "1.0.0",
	"description": "boilerplate for web applications using typescript and webpack",
	"main": "index.js",
	"scripts": {
		"start": "webpack-dev-server --content-base dist",
		"build": "rm -rf dist && webpack -p",
		"deploy": "git add -f dist && git commit -m 'deploy' && git push origin `git subtree split --prefix dist master`:gh-pages --force && git rm -r dist && git commit -m 'cleanup deploy'",
		"release": "npm run build && npm run deploy"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"glamor": "^2.20.40",
		"lodash": "^4.17.4",
		"react": "^16.1.1",
		"react-dom": "^16.1.1",
		"reactive-magic": "^2.1.1"
	},
	"devDependencies": {
		"@types/lodash": "^4.14.85",
		"@types/react": "^16.0.25",
		"@types/react-dom": "^16.0.3",
		"@types/webpack": "^3.8.1",
		"babel": "^6.23.0",
		"babel-core": "^6.26.0",
		"babel-loader": "^7.1.2",
		"babel-preset-es2015": "^6.24.1",
		"babel-preset-react": "^6.24.1",
		"babel-preset-stage-0": "^6.24.1",
		"file-loader": "^1.1.5",
		"html-webpack-plugin": "^2.30.1",
		"ts-loader": "^3.1.1",
		"ts-node": "^3.3.0",
		"typescript": "^2.6.2",
		"webpack": "^3.8.1",
		"webpack-dev-server": "^2.9.5"
	}
}
