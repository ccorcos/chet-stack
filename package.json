{
	"name": "typescript-boilerplate",
	"version": "1.0.5",
	"description": "boilerplate for web applications using typescript and webpack",
	"main": "index.js",
	"scripts": {
		"watch": "ts-node -T src/tools/build.ts --watch",
		"server": "ts-node -T src/tools/server.ts",
		"start": "run-p watch server",
		"clean": "rm -rf build",
		"build": "ts-node -T src/tools/build.ts",
		"deploy": "ts-node -T src/tools/deploy.ts",
		"release": "run-s clean build deploy"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"lodash": "^4.17.21",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@types/express": "^4.17.13",
		"@types/livereload": "^0.9.2",
		"@types/lodash": "^4.14.182",
		"@types/node": "^18.0.5",
		"@types/react": "^18.0.15",
		"@types/react-dom": "^18.0.6",
		"connect-livereload": "^0.6.1",
		"cpx": "^1.5.0",
		"estrella": "^1.4.1",
		"express": "^4.18.1",
		"livereload": "^0.9.3",
		"npm-run-all": "^4.1.5",
		"ts-node": "^10.9.1",
		"typescript": "^4.7.4"
	}
}
