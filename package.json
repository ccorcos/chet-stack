{
	"name": "chet-stack",
	"version": "0.0.1",
	"description": "A spiritual successor to Meteor.js",
	"main": "index.js",
	"scripts": {
		"reset": "tsx src/tools/reset.ts",
		"autoindex": "autoindex src",
		"watch-autoindex": "autoindex src --watch",
		"build-client": "tsx src/tools/build.ts",
		"watch-client": "tsx src/tools/build.ts --watch",
		"server": "tsx watch --clear-screen=false src/server/server.ts",
		"start": "run-p watch-autoindex watch-client server",
		"clean": "rm -rf build db",
		"typecheck": "tsc --noEmit",
		"test": "run-s test:unit test:e2e",
		"test:unit": "mocha -r tsx './src/**/*.test.ts' './src/**/*.test.tsx' --verbose",
		"test:e2e": "playwright test"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@popperjs/core": "^2.11.8",
		"cookie-parser": "^1.4.6",
		"data-type-ts": "^1.0.2",
		"date-fns": "^2.30.0",
		"fs-extra": "^11.1.1",
		"helmet": "^7.0.0",
		"idb": "^7.1.1",
		"lodash": "^4.17.21",
		"md5": "^2.3.0",
		"morgan": "^1.10.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"secure-compare": "^3.0.1",
		"serialize-error": "^11.0.2",
		"tuple-database": "^2.2.4",
		"uuid": "^9.0.1",
		"ws": "^8.13.0"
	},
	"devDependencies": {
		"@ccorcos/autoindex": "^0.0.3",
		"@playwright/test": "^1.38.1",
		"@types/express": "^4.17.17",
		"@types/fs-extra": "^11.0.1",
		"@types/livereload": "^0.9.2",
		"@types/lodash": "^4.14.195",
		"@types/md5": "^2.3.3",
		"@types/mocha": "whitecolor/mocha-types",
		"@types/node": "^20.3.3",
		"@types/react": "^18.2.14",
		"@types/react-dom": "^18.2.6",
		"@types/uuid": "^9.0.4",
		"connect-livereload": "^0.6.1",
		"cpx": "^1.5.0",
		"estrella": "^1.4.1",
		"express": "^4.18.2",
		"livereload": "^0.9.3",
		"mocha": "^10.2.0",
		"npm-run-all": "^4.1.5",
		"playwright": "^1.38.1",
		"prettier": "^3.0.3",
		"tsx": "^4.7.1",
		"typescript": "^5.3.3"
	}
}