{
	"name": "typescript-boilerplate",
	"version": "1.0.3",
	"description": "boilerplate for web applications using typescript and webpack",
	"main": "index.js",
	"scripts": {
		"watch": "ts-node -T src/tools/build.ts --watch",
		"server": "ts-node -T src/tools/server.ts",
		"start": "run-p watch server",
		"clean": "rm -rf build",
		"build": "ts-node -T src/tools/build.ts",
		"deploy": "ts-node -T src/tools/deploy.ts",
		"release": "run-s clean build deploy"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"lodash": "^4.17.21",
		"react": "^17.0.2",
		"react-dom": "^17.0.2"
	},
	"devDependencies": {
		"@types/express": "^4.17.13",
		"@types/lodash": "^4.14.172",
		"@types/node": "^16.9.1",
		"@types/react": "^17.0.21",
		"@types/react-dom": "^17.0.9",
		"cpx": "^1.5.0",
		"estrella": "^1.4.1",
		"express": "^4.17.1",
		"npm-run-all": "^4.1.5",
		"ts-node": "^10.2.1",
		"typescript": "^4.4.3"
	}
}
